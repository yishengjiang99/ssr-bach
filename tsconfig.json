{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["es2018"],
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "ES2018",
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "types": ["node", "mocha", "chai"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true
  },
  "include": ["src"],
  "exclude": ["src/js/**/*.ts"]
}
